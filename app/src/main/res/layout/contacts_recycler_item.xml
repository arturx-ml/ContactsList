<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp">

    <ImageView
        android:id="@+id/contact_picture_image_view"
        android:layout_width="48dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"
        android:layout_height="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        app:layout_constraintStart_toEndOf="@id/contact_picture_image_view"
        android:id="@+id/contact_name_text_view"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="@id/contact_picture_image_view"
        android:layout_marginStart="12dp"
        android:layout_height="wrap_content" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/contact_number_text_view"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/contact_name_text_view"
        app:layout_constraintStart_toEndOf="@id/contact_picture_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>